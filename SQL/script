-- Disaster Table
DROP TABLE IF EXISTS disaster_types;
CREATE TABLE disaster_types (
    disaster_id INT AUTO_INCREMENT PRIMARY KEY,
    disaster_name VARCHAR(100) NOT NULL
);
SELECT * FROM disaster_types;
